<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/layoutComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/logoPhoto2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/labelNumber2"
            android:layout_marginRight="6dip"
            android:src="@drawable/default_contact_logo" />

        <TextView
            android:id="@+id/logoPhotoText2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/labelNumber2"
            android:layout_marginRight="6dip"
            android:background="#ff0000"
            android:text="@+id/labelNumber"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/labelNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/logoPhoto2"
            android:text="@+id/labelNumber"
            android:textColor="#bbb"
            android:textSize="14sp" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/logoType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/labelNumber2"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/logoPhoneOuMessage"
            android:textSize="12sp" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/logoPhoneOuMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/labelNumber2"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/labelTime"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/labelTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/labelNumber2"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="#bbb"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonSearchContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelNumber2"
            android:layout_toRightOf="@+id/logoPhoto2"
            android:onClick="searchContact"
            android:text="@string/buttonSearchContact" />

        <TextView
            android:id="@+id/labelContact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoPhoto2"
            android:text="@+id/label"
            android:textSize="32sp" />
        
        <TextView
            android:id="@+id/textViewClientId22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelContact2"
            android:singleLine="true"
            android:text=""
            android:textColor="#bbb"
            android:textSize="12sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/editText2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labelContact2"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="@string/comment_write"
            android:lines="2"
            android:textSize="24sp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <DatePicker
                android:id="@+id/datepicker1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:calendarViewShown="false" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/buttonOK"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="ok"
                android:text="@string/activity_comment_send_comment"/>
        </LinearLayout>

        <requestFocus />
    </RelativeLayout>

</ScrollView>